import java.util.Scanner;
import java.util.regex.Pattern;

public class LabTest 
{
	public static void main(String[] args) 
	{
		Scanner userInput = new Scanner(System.in);
		userInput.useDelimiter(Pattern.compile("[\\n\\r]+"));
		
		int choice = 0;
		while (choice != 5) 
		{
			displayMenu();
			if (userInput.hasNext(Pattern.compile("[1-5]"))) 
			{
				choice = userInput.nextInt();
				switch(choice){
				case 1: // Display
					break;
				case 2: // Add 1 Item 						
					break;
				case 3: // Add Contacts from a File
					break;
				case 4:// Save Contacts to a File
					break;
				case 5:// Determine if a Contact is in the List
					break;
				default:
					break;
				}
			}	
			else{
				System.err.println("Invalid choice");
				choice = 0;
				userInput.next();
			}
		}	
		
		
		if(choice == 5)
			userInput.close();

	}
	
	
	private static void displayMenu()
	{
		System.out.print("-----------Main Menu-----------"
				+ "Please Select one of the following:\n"
				+ "1: Add Student to College Registrar\n"
				+ "2: Display Students in the Registrar\n"
				+ "3: Set College Registrar Name\n"
				+ "4: Search for a Student\n"
				+ "5: Exit\n"
				+ ">");
	}	
}