public class Student 
{
	private String firstName;
	private String lastName;
	private float balance;
	
	public Student() // Default constructor (creates a empty student)
	{
		firstName = " ";
		lastName = " ";
		balance = 0.0f;
	}
	
	public Student(String fName, String lName, float bal) // (Initial Constructor) Creates a new student with new values
	{
		firstName = fName;
		lastName = lName;
		balance = bal;
	}
}


